{
  "functions": {
    "source": "functions",
    "predeploy": [
      "bash -c 'npm --prefix \"$RESOURCE_DIR\" run lint'",
      "bash -c 'npm --prefix \"$RESOURCE_DIR\" run build'"    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
